{
  "name": "x-files-api",
  "version": "1.0.0",
  "description": "An X-Files GraphQL API",
  "main": "src/server.ts",
  "scripts": {
    "start": "node 'dist/server.js'",
    "build": "tsc -p . && ncp src/schema dist/schema && cp -R ./src/static dist",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elloboblanco/x-files-api.git"
  },
  "keywords": [
    "graphql",
    "typescript",
    "apollo-server"
  ],
  "author": "https://github.com/elloboblanco",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/elloboblanco/x-files-api/issues"
  },
  "homepage": "https://github.com/elloboblanco/x-files-api#readme",
  "dependencies": {
    "@graphql-tools/graphql-file-loader": "^7.3.12",
    "@graphql-tools/load": "^7.5.11",
    "@graphql-tools/schema": "^8.3.11",
    "@graphql-tools/utils": "^8.6.10",
    "apollo-server-core": "^3.10.1",
    "apollo-server-express": "^3.7.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "graphql": "^16.5.0",
    "graphql-depth-limit": "^1.1.0",
    "http": "0.0.1-security"
  },
  "devDependencies": {
    "@tsconfig/node14": "^1.0.1",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.13",
    "@types/graphql": "^14.5.0",
    "@types/graphql-depth-limit": "^1.1.3",
    "@types/node": "^14.18.18",
    "ncp": "^2.0.0",
    "nodemon": "^2.0.16",
    "prettier": "^2.6.2",
    "ts-node-dev": "^1.1.8",
    "tslint": "^6.1.3",
    "typescript": "^4.6.4"
  },
  "engines": {
    "node": "14.19.1"
  }
}
